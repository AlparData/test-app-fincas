<odoo>
    <record id="view_finca_orden_form" model="ir.ui.view">
        <field name="name">finca.orden.trabajo.form</field>
        <field name="model">finca.orden.trabajo</field>
        <field name="arch" type="xml">
            <form string="Orden de Trabajo de Finca">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha"/>
                        <field name="responsable_id"/>
                        <field name="parcela_id"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Equipo y Maquinaria">
                            <field name="equipo_ids" widget="many2many_tags"/>
                            <field name="maquinaria_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Implementos y Productos">
                            <field name="implementos_ids" widget="many2many_tags"/>
                            <field name="productos_aplicados_ids">
                                <tree editable="bottom">
                                    <field name="producto_id"/>
                                    <field name="cantidad"/>
                                    <field name="unidad_medida"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_finca_orden_tree" model="ir.ui.view">
        <field name="name">finca.orden.trabajo.tree</field>
        <field name="model">finca.orden.trabajo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="fecha"/>
                <field name="responsable_id"/>
                <field name="parcela_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="action_finca_orden" model="ir.actions.act_window">
        <field name="name">Órdenes de Trabajo</field>
        <field name="res_model">finca.orden.trabajo</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_finca_root" name="Finca"/>
    <menuitem id="menu_finca_orden" name="Órdenes de Trabajo" parent="menu_finca_root" action="action_finca_orden"/>
</odoo>